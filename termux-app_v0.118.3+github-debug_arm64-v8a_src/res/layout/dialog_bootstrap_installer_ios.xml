<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/ios_dialog_background"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:clipToPadding="false">

    <ProgressBar
        android:id="@id/bootstrap_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:indeterminate="false"
        android:progress="10"
        android:max="100"
        android:progressTint="#8E8E93"
        android:progressBackgroundTint="#D1D1D6"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@id/bootstrap_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bootstrap_installer_body"
        android:textColor="#000000"
        android:textSize="13sp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium" />

</LinearLayout>
