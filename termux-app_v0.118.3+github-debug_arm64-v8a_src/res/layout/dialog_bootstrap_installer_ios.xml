<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/ios_dialog_background"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="25dp"
    android:paddingBottom="25dp"
    android:minWidth="120dp">

    <ProgressBar
        android:id="@id/bootstrap_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="120dp"
        android:layout_height="3dp"
        android:indeterminate="false"
        android:progress="0"
        android:max="100"
        android:progressTint="#8E8E93"
        android:progressBackgroundTint="#D1D1D6" />

    <TextView
        android:id="@id/bootstrap_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/bootstrap_installer_body"
        android:textColor="#000000"
        android:textSize="13sp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium" />

</LinearLayout>
